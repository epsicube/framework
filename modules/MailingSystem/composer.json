{
  "name": "unigale/module-mailing-system",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "COLANT Alan",
      "email": "contact@alancolant.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^12.8",
    "unigale/support": "*",
    "spatie/mjml-php": "^1.2.5"
  },
  "suggest": {
    "unigale/module-execution-platform": "Some activities and workflows are registered by this module"
  },
  "autoload": {
    "psr-4": {
      "UniGaleModules\\MailingSystem\\": "."
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "unigale": {
      "modules": [
        "UniGaleModules\\MailingSystem\\MailingSystemModule"
      ]
    }
  }
}
