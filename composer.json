{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "epsicube/framework",
  "description": "The Epsicube framework",
  "license": "MIT",
  "authors": [
    {
      "name": "COLANT Alan",
      "email": "alan.colant@uni-deal.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "ext-intl": "*",
    "ext-pcntl": "*",
    "php": "^8.3",
    "laravel/framework": "^12.41",
    "laravel/mcp": "^0.4",
    "spatie/mjml-php": "^1.2.5",
    "phiki/phiki": "^2.0.4",
    "codeat3/blade-phosphor-icons": "^2.0",
    "filament/filament": "^4.5",
    "sajya/server": "^7.0.0",
    "filafly/filament-phosphor-icons": "^2.0"
  },
  "replace": {
    "epsicube/schemas": "self.version",
    "epsicube/support": "self.version",
    "epsicube/foundation": "self.version",
    "epsicube/module-accounts-manager": "self.version",
    "epsicube/module-administration": "self.version",
    "epsicube/module-execution-platform": "self.version",
    "epsicube/module-hypercore": "self.version",
    "epsicube/module-mailing-system": "self.version"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "*",
    "laravel/pint": "^1.25",
    "nunomaduro/collision": "^8.8",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-arch": "^4.1",
    "pestphp/pest-plugin-browser": "^4.1",
    "pestphp/pest-plugin-laravel": "^4.1"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "Epsicube\\": "packages",
      "EpsicubeModules\\": "modules"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Epsicube\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "lefthook install"
    ],
    "post-update-cmd": [
      "lefthook install"
    ],
    "test": "@php vendor/bin/pest",
    "test-coverage": "@php vendor/bin/pest --coverage",
    "lint": [
      "@php vendor/bin/pint --ansi"
    ]
  },
  "extra": {
    "epsicube": {
      "modules": [
        "EpsicubeModules\\AccountsManager\\AccountsManagerModule",
        "EpsicubeModules\\Administration\\AdministrationModule",
        "EpsicubeModules\\ExecutionPlatform\\ExecutionPlatformModule",
        "EpsicubeModules\\Hypercore\\HypercoreModule",
        "EpsicubeModules\\MailingSystem\\MailingSystemModule",
        "EpsicubeModules\\McpServer\\McpServerModule",
        "EpsicubeModules\\JsonRpcServer\\JsonRpcServerModule"
      ],
      "hypercore": {
        "adapters": [
          "EpsicubeModules\\AccountsManager\\AccountsManagerModuleAdapter"
        ]
      }
    }
  }
}
