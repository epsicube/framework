{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "unigale/framework",
  "description": "The UniGale framework",
  "license": "MIT",
  "authors": [
    {
      "name": "COLANT Alan",
      "email": "alan.colant@uni-deal.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "ext-intl": "*",
    "php": "^8.3",
    "laravel/framework": "^12.8",
    "laravel/mcp": "^0.4",
    "spatie/mjml-php": "^1.2.5",
    "phiki/phiki": "^2.0.4",
    "codeat3/blade-clarity-icons": "^1.8",
    "filament/filament": "^v4.0.0-beta5"
  },
  "replace": {
    "unigale/contracts": "self.version",
    "unigale/foundation": "self.version",
    "unigale/module-accounts-manager": "self.version",
    "unigale/module-administration": "self.version",
    "unigale/module-execution-platform": "self.version",
    "unigale/module-hypercore": "self.version",
    "unigale/module-mailing-system": "self.version"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "*",
    "laravel/pint": "^1.25",
    "nunomaduro/collision": "^8.8",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-arch": "^4.1",
    "pestphp/pest-plugin-browser": "^4.1",
    "pestphp/pest-plugin-laravel": "^4.1"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "UniGale\\": "packages",
      "UniGaleModules\\": "modules"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UniGale\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "lefthook install"
    ],
    "post-update-cmd": [
      "lefthook install"
    ],
    "test": "@php vendor/bin/pest",
    "test-coverage": "@php vendor/bin/pest --coverage",
    "lint": [
      "@php vendor/bin/pint --ansi"
    ]
  },
  "extra": {
    "unigale": {
      "modules": [
        "UniGaleModules\\AccountsManager\\AccountsManagerModule",
        "UniGaleModules\\Administration\\AdministrationModule",
        "UniGaleModules\\ExecutionPlatform\\ExecutionPlatformModule",
        "UniGaleModules\\Hypercore\\HypercoreModule",
        "UniGaleModules\\MailingSystem\\MailingSystemModule",
        "UniGaleModules\\McpServer\\McpServerModule"
      ],
      "hypercore": {
        "adapters": [
          "UniGaleModules\\AccountsManager\\AccountsManagerModuleAdapter"
        ]
      }
    }
  }
}
